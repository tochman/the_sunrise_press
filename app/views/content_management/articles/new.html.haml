.flex.flex-wrap.justify-center
    .m-8.w-auto.border-2.shadow.text-center.p-4.rounded-lg
        = form_with model: @article, url: content_management_articles_path do | form |
            = notice || alert
            %p
                = form.label :title
                %br/
                = form.text_field :title, {class: 'form'}
            %p
                = form.label :description
                %br/
                = form.text_field :description, {class: 'form'}
            %p
                = form.label :content
                %br/
                = form.text_area :content, {class: 'form'}
            %p
                = form.label :image
                %br/
                = form.file_field :image
            %p
                = form.label :category_id
                %br/
                = form.collection_select :category_id, @categories, :id, :name, {class: 'form'}
            %p
                = form.submit 'Save Article' , {class: 'form-button'}